<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/content_horizontal_padding"
    android:paddingRight="@dimen/content_horizontal_padding"
    android:background="#efefef"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_outer_frame"
        android:orientation="vertical">
        <EditText
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="15dp"
            android:background="@drawable/edit_no_frame"
            android:hint="Account"
            android:textColorHint="#8c8c8c"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/edit_border"></Spinner>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="15dp"
            android:inputType="textPassword"
            android:background="@drawable/edit_no_frame"
            android:hint="Password"
            android:textColorHint="#8c8c8c"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button_frame"
        android:text="@string/login_button_register"
        android:textColor="@android:color/white"/>

</LinearLayout>